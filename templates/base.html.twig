{% if not title is defined %}
    {% if pageTitle is defined %}
        {% set title = pageTitle ~ ' | ThenLabs' %}
    {% else %}
        {% set title = 'ThenLabs' %}
    {% endif %}
{% endif %}

{% if not meta_description is defined %}
    {% set meta_description = 'Nos dedicamos a crear y gestionar proyectos de software de c√≥digo abierto.' %}
{% endif %}

{% if not ogUrl is defined %}
    {% set ogUrl = (app.request.schemeAndHttpHost ~ app.request.requestUri) %}
{% endif %}

{% if not ogType is defined %}
    {% set ogType = 'blog' %}
{% endif %}

{% if not ogTitle is defined %}
    {% set ogTitle = title %}
{% endif %}

{% if not ogDescription is defined %}
    {% set ogDescription = title %}
{% endif %}

{% if not ogImage is defined %}
    {% set ogImage = asset('preview.png') %}
{% endif %}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>{{ title }}</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ meta_description }}">
    <meta name="author" content="ThenLabs">
    <meta property="og:site_name" content="ThenLabs">
    <meta property="og:url" content="{{ ogUrl }}">
    <meta property="og:type" content="{{ ogType }}">
    <meta property="og:title" content="{{ ogTitle }}">
    <meta property="og:image" content="{{ ogImage }}">
    <meta property="og:description" content="{{ ogDescription }}">
    {# <link rel="shortcut icon" href="favicon.ico"> #}

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-163364401-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-163364401-1');
    </script>

    {% block styles %}{% endblock %}
</head>

<body data-spy="scroll">
    {% block body %}{% endblock %}

    {% block scripts %}{% endblock %}
</body>
</html>